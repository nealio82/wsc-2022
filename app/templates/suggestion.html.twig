{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
            <div class="bg-light me-md-3 pt-3 px-3 pb-5 pb-5 pt-md-5 px-md-5 text-center shadow-lg">

                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success align-items-center" role="alert">
                        <div>
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}

                <div class="my-3 py-3">
                    <h2 class="display-5">{{ kitty.name }}</h2>
                    <p class="lead">{{ kitty.intro }}</p>
                </div>

                <div class="pb-5">
                    <a href="{{ path('match', {'kittyId': kitty.id}) }}" class="btn btn-success me-4 p-3 px-5">Kisses</a>
                    <a href="{{ path('suggest_kitty') }}" class="btn btn-outline-danger p-3 px-5">Hisses</a>
                </div>

                <img class="bg-dark shadow-sm mx-auto mb-5"
                     style="width: 80%; border-radius: 21px;"
                     src="{{ asset(kitty.avatarUrl, 'avatars') }}"
                />

            </div>
        </div>
    </main>
{% endblock %}